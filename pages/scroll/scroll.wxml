<!-- scroll-view 局部滚动 -->
<!-- scroll-x 可以横向滚动 -->
  <scroll-view class="container1" scroll-x upper-threshold="{{100}}" lower-threshold="{{100}}" 
  bindscrolltoupper="handleToUpper"   bindscrolltolower="handleToLower" >
  <!-- {{10}}被当成一个 0~9的数组 -->
  <view  wx:for="{{10}}" class="item1" >{{item}}</view>
  </scroll-view>
<!-- scroll-y 垂直滚动 -->
<scroll-view class="container2" scroll-y upper-threshold="{{100}}" lower-threshold="{{100}}" 
bindscrolltoupper="handleToUpper"   bindscrolltolower="handleToLower" >
  <!-- {{10}}被当成一个 0~9的数组 -->
  <view  wx:for="{{10}}" class="item2" >{{item}}</view>
  </scroll-view>
  
  <!-- 补充滚动监听 -->
<scroll-view class="container2" scroll-y bindscroll="handleScroll" >
  <!-- {{10}}被当成一个 0~9的数组 -->
  <view  wx:for="{{10}}" class="item2" >{{item}}</view>
  </scroll-view>

