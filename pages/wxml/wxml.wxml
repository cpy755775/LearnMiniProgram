<!--pages/wxml/wxml.wxml-->
<view>{{message}}</view>
<view>{{firstname}} {{lastname}}</view>
<view>{{firstname + "      " + lastname}}</view>
<view>{{age >=18 ? '成年人':'未成年人'}}</view>
<view>{{nowTime}}</view>
<view>--------------------------------------</view>
<button size="mini" bindtap="bindSwitchColor">切换颜色</button>
<!-- 通过控制class   来控制它的颜色 -->
<view class='view1   {{view2 ? "active": ""}}  '>哈哈哈</view>
<view>------------------条件判断---------------</view>
<button size="mini" bindtap="bindSwitchCondition">切换显示</button>
<view wx:if="{{condition}}">哈哈哈</view>
<button size="mini" bindtap="bindScoreAdd">成绩+6</button>
<view wx:if="{{score>=90}}">优秀</view>
<view wx:elif="{{score>=80}}">良好</view>
<view wx:elif="{{score>=60}}">及格</view>
<view wx:else>不及格</view>
<view>-------------------------------</view>
<!-- 如果使用hidden隐藏组件，主要是通过css样式display=none 设置的，所以组件还是存在的 -->
<!-- 如果使用wx:if 如果条件成立就创建，不成立就销毁 -->
<view hidden>我是通过hidden控制的内容</view>
<view wx:if="{{false}}">我是通过wx:if控制的内容</view>
