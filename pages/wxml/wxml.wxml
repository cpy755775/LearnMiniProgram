<!-- 给item和index起名字 -->
<view wx:for="{{movies}}" wx:for-item="mv" wx:for-index="i"  >{{mv}} {{i}}</view>
<!-- 起别名一般用于多维数组 -->
<block wx:for="{{nums}}" wx:for-item="num" >
  <block wx:for="{{num}}">
    <view>{{item}}</view>
  </block>
</block>
<!-- wx:key当数据发生变化的时候，有key的效率更高 -->
<block wx:for="{{arr}}" wx:key="*this">
<view>{{item}}</view>
</block>

